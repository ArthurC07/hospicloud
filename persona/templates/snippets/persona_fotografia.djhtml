{% load thumbnail %}{% if not persona.fotografia == None %}
{% thumbnail persona.fotografia "100x100" crop="center" as im %}<img class="fotografia alinear-derecha" src="{{ im.url }}" width="{{ im.width }}" height="{{ im.height }}">{% endthumbnail %}
{% else %}
<img class="fotografia alinear-derecha" src="{{ STATIC_PREFIX }}images/face.jpg" width="100" height="100" />
{% endif %}